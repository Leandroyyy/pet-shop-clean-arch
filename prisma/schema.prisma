// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Owner {
  id       String   @id
  name     String
  document String   @unique
  birthday DateTime
  email    String   @unique
  pets     Pet[]
}

model Pet {
  id       String @id
  name     String
  birthday String
  species  String
  breed    String
  gender   String
  type     String
  owner    Owner  @relation(fields: [ownerId], references: [id])
  ownerId  String
}
